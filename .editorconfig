root = true

[*]
charset = utf-8

# Specify Unix-style line-feed ending
end_of_line = lf

# Insert newline at end of file
insert_final_newline = true

# Trim any stray whitespace
trim_trailing_whitespace = true

# Soft tabs, indent size 2
[*.{scss,less,hbs,js,css,html}]
indent_style = space
indent_size = 2
